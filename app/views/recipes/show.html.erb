
<div class="display-recipe">
	<h2><%=@recipe.title %></h2>
	<h3><%=@recipe.summary %></h3>
	<h3>Serves: <%=@recipe.serve_size%></h3>
	<h3>time: <%=@recipe.time%></h3>
	<h3>directions</h3>
	<p><%= @recipe.directions %>
		<br><button><%= link_to "edit", edit_recipe_path(@recipe) %></button>
</div>

<h4>comments</h4>
<div class="comment">
	<% @r_comments.each do |comment| %>
		content: <%= comment.content %>
		<% if comment.user %>
			by: <%= comment.user.first_name %><br>
			<% end %>
	<%end%>
</div>

<div>
	<%= form_for [@commentable, @comment] do |f| %>

		<%= f.text_area :content %>

		<%= f.submit %>
		<% end %>
</div> 