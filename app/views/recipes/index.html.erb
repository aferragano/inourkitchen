
<div class="index-cards">
	<h3>top public recipes</h3>
	<ul>
		<% @public_recipes.each do |r| %>
			<li><h4><%=link_to r.title, recipe_path(r)%></h4></li>
			<%=image_tag first_image(r.images), class: "first-recipe-image" %>
			<h6><%=r.summary %></h6><hr>
		<% end %>
	</ul>
</div>



<% if session[:user_id] %>
	<div class="index-cards">
		<h3>my recipes</h3>
		<ul>
		<% @user_recipes.each do |r| %>
			<li><%=link_to r.title, recipe_path(r)%></li>	
			<%=image_tag first_image(r.images), class: "first-recipe-image" %>
			<h6><%=r.summary %></h6><hr>
		<% end %>
		</ul>
		<button><%= link_to("add recipe", new_recipe_path) %></button>
	</div>
			

			
	<div class="index-cards">
		<h3>my groups</h3> 
			<ul>
			<% @groups.each do |group| %>
			<li><%=link_to group.name, group_path(group)%></li>
			</ul>
			<% end %>
	</div>

	<div class="index-cards" id="tag-name">
		<h3>tags</h3> 
			
			<% @tags.each do |tag| %>
			<h5><%=link_to tag.name, tag_path(tag)%> </h5>
			<% end %>

	</div>
<% end %>
				